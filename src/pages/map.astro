---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Interactive Map - South America Travel Chronicles">
	<main>
		<h1>Interactive <span class="text-gradient">Map</span></h1>
		<p class="description">
			Explore my journey through South America by clicking on the countries I visited.
		</p>
		<div class="map-container">
			<iframe 
				src="https://www.google.com/maps/d/embed?mid=1lxrz7m6mDa2eC9LdxZ4dpdFKzF0&ehbc=2E312F" 
				width="100%" 
				height="600"
				style="border:0;" 
				allowfullscreen="" 
				loading="lazy"
			></iframe>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.description {
		margin-bottom: 3rem;
		text-align: center;
		font-size: 1.2rem;
		color: rgb(var(--accent-light));
	}
	.map-container {
		background: rgba(var(--accent-dark), 0.2);
		border-radius: 15px;
		overflow: hidden;
		margin-bottom: 2rem;
	}
</style>