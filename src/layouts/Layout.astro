---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A journey through South America - Travel Chronicles" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="noindex,nofollow" />
		<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
		<script is:inline src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<div class="nav-content">
				<a href="#hero" class="logo">South America Trip</a>
				<div class="nav-links">
					<a href="#countries">Countries</a>
					<a href="#map">Map</a>
					<a href="#timeline">Timeline</a>
				</div>
			</div>
		</nav>
		<slot />
		<footer>
			<p>Â© 2024 South America Trip. All rights reserved.</p>
		</footer>
	</body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  nav {
    background: rgba(var(--accent-dark), 0.95);
    padding: 0;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    backdrop-filter: blur(10px);
  }
  .nav-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    font-size: clamp(1.25rem, 2vw, 1.5rem);
    font-weight: bold;
    color: white;
    text-decoration: none;
  }
  .nav-links {
    display: flex;
    gap: clamp(1rem, 3vw, 2rem);
  }
  .nav-links a {
    color: rgb(var(--accent-light));
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: clamp(0.9rem, 1.5vw, 1rem);
  }
  .nav-links a:hover {
    color: white;
  }
  footer {
    background: rgba(var(--accent-dark), 0.95);
    padding: 1rem;
    text-align: center;
    margin-top: auto;
  }
  footer p {
    color: white;
    margin: 0;
    font-size: clamp(0.8rem, 1.5vw, 1rem);
  }

  .section {
    padding: 4rem 1rem;
    margin: 0 auto;
    scroll-margin-top: 80px;
  }

  .section:not(.hero) {
    max-width: 1200px;
  }

  h2 {
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    text-align: center;
    margin-bottom: 1em;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .description {
    margin-bottom: 3rem;
    text-align: center;
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: rgb(var(--accent-light));
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 768px) {
    .section {
      padding: 2rem 1rem;
    }
    
    .nav-content {
      flex-direction: column;
      gap: 0.5rem;
      padding: 0.75rem 1rem;
    }
    
    .nav-links {
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .nav-links {
      flex-wrap: wrap;
      justify-content: center;
    }
    .nav-links a {
      padding: 0.5rem;
    }
  }
</style>